{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": true,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "75",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0",
    "ENABLE_TOOL_SEARCH": "auto:3"
  },
  "attribution": {
    "commits": true,
    "pullRequests": true
  },
  "permissions": {
    "deny": ["Bash(curl *)", "Bash(wget *)"],
    "ask": [
      "Bash(git push *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(npm install *)",
      "Bash(pip install *)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [
        "api.anthropic.com",
        "github.com",
        "api.github.com",
        "registry.npmjs.org",
        "pypi.org",
        "server.smithery.ai"
      ]
    }
  },
  "showTurnDuration": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/bash-firewall.sh",
            "timeout": 10,
            "statusMessage": "Checking bash command safety..."
          }
        ]
      },
      {
        "matcher": "Read|Write|Edit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/protect-files.sh",
            "timeout": 10,
            "statusMessage": "Checking file access..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/secret-scan-pre.sh",
            "timeout": 10,
            "statusMessage": "Scanning for secrets..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/pre-write-backup.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Creating backup..."
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/url-allowlist.sh",
            "timeout": 10,
            "statusMessage": "Checking URL safety..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/auto-format.sh",
            "timeout": 30,
            "async": true,
            "statusMessage": "Formatting code..."
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/secret-scan.sh",
            "timeout": 10,
            "statusMessage": "Post-write secret scan..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/smithery-context.sh",
            "timeout": 10,
            "statusMessage": "Loading available MCP tools..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/session-start.sh",
            "timeout": 10,
            "statusMessage": "Initializing session..."
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/post-failure.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging tool failure..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/pre-compact.sh",
            "timeout": 10,
            "statusMessage": "Preparing compaction..."
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/subagent-start.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging subagent start..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/subagent-stop.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging subagent stop..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/stop.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Turn complete..."
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/task-gate.sh",
            "timeout": 60,
            "statusMessage": "Running task quality gate..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/teammate-gate.sh",
            "timeout": 10,
            "statusMessage": "Checking teammate readiness..."
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/permission-request.sh",
            "timeout": 10,
            "statusMessage": "Checking permission request..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/notification.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Processing notification..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/session-logger.sh",
            "timeout": 15,
            "async": true,
            "statusMessage": "Logging session..."
          }
        ]
      }
    ]
  },
  "skipDangerousModePermissionPrompt": true
}
