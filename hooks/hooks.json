{
  "description": "claude-forge security and formatting hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/bash-firewall.sh",
            "timeout": 10,
            "statusMessage": "Checking bash command safety..."
          }
        ]
      },
      {
        "matcher": "Read|Write|Edit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/protect-files.sh",
            "timeout": 10,
            "statusMessage": "Checking file access..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/secret-scan-pre.sh",
            "timeout": 10,
            "statusMessage": "Scanning for secrets..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/pre-write-backup.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Creating backup..."
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/url-allowlist.sh",
            "timeout": 10,
            "statusMessage": "Checking URL safety..."
          }
        ]
      },
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/input-sanitizer.sh",
            "timeout": 10,
            "statusMessage": "Sanitizing input..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/auto-format.sh",
            "timeout": 30,
            "async": true,
            "statusMessage": "Formatting code..."
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/secret-scan.sh",
            "timeout": 10,
            "statusMessage": "Post-write secret scan..."
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/subagent-start.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging subagent start..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/subagent-stop.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging subagent stop..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/stop.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Turn complete..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/smithery-context.sh",
            "timeout": 10,
            "statusMessage": "Loading available MCP tools..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/setup.sh",
            "timeout": 30,
            "statusMessage": "Checking setup requirements..."
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
            "timeout": 10,
            "statusMessage": "Initializing session..."
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/post-failure.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Logging tool failure..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.sh",
            "timeout": 10,
            "statusMessage": "Preparing compaction..."
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/task-gate.sh",
            "timeout": 60,
            "statusMessage": "Running task quality gate..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/teammate-gate.sh",
            "timeout": 10,
            "statusMessage": "Checking teammate readiness..."
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/permission-request.sh",
            "timeout": 10,
            "statusMessage": "Checking permission request..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/notification.sh",
            "timeout": 10,
            "async": true,
            "statusMessage": "Processing notification..."
          }
        ]
      }
    ],
    "ConfigChange": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/config-change.sh",
            "timeout": 10,
            "statusMessage": "Logging config change..."
          }
        ]
      }
    ],
    "WorktreeCreate": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/worktree-create.sh",
            "timeout": 30,
            "statusMessage": "Creating worktree..."
          }
        ]
      }
    ],
    "WorktreeRemove": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/worktree-remove.sh",
            "timeout": 15,
            "statusMessage": "Removing worktree..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-logger.sh",
            "timeout": 15,
            "async": true,
            "statusMessage": "Logging session..."
          }
        ]
      }
    ]
  }
}
